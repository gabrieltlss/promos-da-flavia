<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Promos da Flávia</title>

    <link rel="stylesheet" href="/styles/partials/header.css">
    <link rel="stylesheet" href="/styles/category/create-category.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined&icon_names=menu&display=block
">
</head>

<body>
    <!-- INCLUIR CSS PARA ESTA PÁGINA (Criar pasta category) -->
    <%- include("./partials/sidebar.ejs") %>
        <%- include("./partials/header.ejs") %>

            <main class="w3-grid w3-padding">
                <%- include("./partials/aside.ejs") %>

                    <section class="creation-section">
                        <div class="create-category-container">
                            <form action="" method="post" id="create-category-form">
                                <h3>Criar Categoria</h3>

                                <div class="w3-section">
                                    <label for="category-name">Categoria:</label>
                                    <input type="text" name="category-name" id="category-name" class="w3-input">
                                </div>

                                <div class="w3-section">
                                    <button type="submit" class="w3-button w3-pink">Criar</button>
                                </div>
                            </form>

                            <form action="" method="post" id="delete-category-form">
                                <h3>Excluir Categoria</h3>

                                <div class="w3-section">
                                    <label for="category-id">Id:</label>
                                    <input type="text" name="category-id" id="category-id" class="w3-input">
                                </div>

                                <div class="w3-section">
                                    <button type="submit" class="w3-button w3-pink">Excluir</button>
                                </div>
                            </form>
                        </div>

                        <div class="list-category-container">
                            <% if (typeof categories==="undefined" ) {%>
                                <h2>- Não há categorias cadastradas.</h2>
                                <%} else {%>
                                    <h2 class="w3-text-green">- Há categorias cadastradas.</h2>
                                    <%}%>
                        </div>
                    </section>
            </main>
            <script src="/js/header.js"></script>
</body>

</html>